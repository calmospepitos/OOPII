<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/principal"
    android:background="@color/pale_beige">

    <!--  Bar de statistiques  -->
    <LinearLayout
        android:id="@+id/stats_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/brown"
        android:paddingVertical="5dp">

        <!-- Affichage des statistiques  -->
        <LinearLayout
            android:id="@+id/stats_bar_affichage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="CARDS LEFT"
                android:textColor="@color/pale_beige"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TIME"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pale_beige"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SCORE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pale_beige"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Valeurs des statistiques  -->
        <LinearLayout
            android:id="@+id/stats_bar_valeurs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cartes_restantes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="97"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pale_beige"
                android:gravity="center"/>

            <Chronometer
                android:id="@+id/simpleChronometer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:countDown="false"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pale_beige"
                android:gravity="center"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/pale_beige"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <!--  Suites dÃ©croissantes  -->
    <LinearLayout
        android:id="@+id/suites_decroissantes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <!-- Suite 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|bottom">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="105dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/triangle_down"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/suite1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:gravity="center"
                    android:text="98"
                    android:textColor="@color/brown"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Suite 2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|bottom">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="105dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center">

                <TextView
                    android:id="@+id/suite2"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="98"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/triangle_down"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/retour"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <!--  Suites croissantes  -->
    <LinearLayout
        android:id="@+id/suites_croissantes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <!-- Suite 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|top">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="105dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/triangle_up"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/suite3"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Suite 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center|top">

            <LinearLayout
                android:layout_width="125dp"
                android:layout_height="105dp"
                android:background="@drawable/rounded_corners"
                android:gravity="center">

                <TextView
                    android:id="@+id/suite4"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/triangle_up"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--  Choix des cartes  -->
    <LinearLayout
        android:id="@+id/choix_cartes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <!-- PremiÃ¨re ligne -->
        <LinearLayout
            android:id="@+id/ligne1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp">

            <!-- Carte 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte1"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Carte 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte2"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Carte 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte3"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Carte 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte4"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- DeuxiÃ¨me ligne -->
        <LinearLayout
            android:id="@+id/ligne2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp">

            <!-- Carte 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte5"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Carte 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte6"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Carte 7 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte7"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Carte 8 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/choix_carte8"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="@drawable/card_background"
                    android:text="0"
                    android:textColor="@color/brown"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
